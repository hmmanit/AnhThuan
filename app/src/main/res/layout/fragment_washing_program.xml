<!--        app:layout_constraintLeft_toLeftOf="@+id/ckGiatSo"-->
<!--        app:layout_constraintRight_toRightOf="@+id/ckGiatSo"/>-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temp"
        android:layout_width="@dimen/dimen_70dp_w"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:background="@drawable/border_recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ckGiatSo"
        app:layout_constraintRight_toRightOf="@+id/ckGiatSo" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temp1"
        android:layout_width="@dimen/dimen_70dp_w"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:background="@drawable/border_recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ckGiuThem"

        app:layout_constraintRight_toRightOf="@+id/ckGiuThem" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temp3"
        android:layout_width="@dimen/dimen_70dp_w"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:background="@drawable/border_recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ckGiatTuDong"
        app:layout_constraintRight_toRightOf="@+id/ckGiatTuDong" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_temp4"
        android:layout_width="@dimen/dimen_70dp_w"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"

        android:background="@drawable/border_recyclerview"
        app:layout_constraintBottom_toBottomOf="@+id/guideline3"
        app:layout_constraintLeft_toLeftOf="@+id/ckXaTuDong"
        app:layout_constraintRight_toRightOf="@+id/ckXaTuDong" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>